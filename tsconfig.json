{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@khaveeai/core": ["./packages/core/src/index.ts"],
      "@khaveeai/react": ["./packages/react/src/index.ts"],
      "@khaveeai/providers-openai": ["./packages/providers/openai/src/index.ts"],
      "@khaveeai/providers-azure": ["./packages/providers/azure/src/index.ts"],
      "@khaveeai/providers-mock": ["./packages/providers/mock/src/index.ts"]
    },
    "baseUrl": "."
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
